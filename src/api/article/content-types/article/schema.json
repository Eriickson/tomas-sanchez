{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Articles"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "subtitle": {
            "type": "string",
            "required": true
        },
        "publishDate": {
            "type": "date",
            "required": true
        },
        "images": {
            "type": "component",
            "repeatable": true,
            "component": "global.images"
        },
        "content": {
            "type": "richtext",
            "required": true
        },
        "description": {
            "type": "text",
            "required": true,
            "maxLength": 160
        },
        "targetUrl": {
            "type": "string",
            "required": true
        }
    }
}
